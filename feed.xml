---
layout: null
soundcloud_rss: http://feeds.soundcloud.com/users/soundcloud:users:197383866/sounds.rss
---
<?xml version="1.0" encoding="UTF-8"?>
<rss xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | prepend: site.baseurl | prepend: site.url }}" rel="self" type="application/rss+xml"/>
    <language>fr-fr</language>
    <copyright>&#169; {{ site.author | xml_escape }}</copyright>
    <itunes:subtitle>{{ site.subtitle | xml_escape }}</itunes:subtitle>
    <itunes:author>{{ site.author | xml_escape }}</itunes:author>
    <itunes:summary>{{ site.summary | xml_escape }}</itunes:summary>
    <itunes:owner>
      <itunes:name>{{ site.author | xml_escape }}</itunes:name>
      <itunes:email>{{ site.email }}</itunes:email>
    </itunes:owner>
    <itunes:image href="http://zenm4.net/img/zenm4_big.jpg" />
    <itunes:category text="Technology" />
    <itunes:explicit>no</itunes:explicit>
    <pubDate>{{ site.time | date_to_rfc822 }}</pubDate>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    <generator>Jekyll v{{ jekyll.version }}</generator>
    {% for post in site.posts limit:42 %}{% for episode in site.data.episodes %}{% if episode.n == post.n %}{% assign ep = episode %}{% endif %}{% endfor %}
      <item>
        <title>{{ ep.titre | xml_escape }}</title>
        <description>{{ post.content | xml_escape }}</description>
	<itunes:author>{{ site.author | xml_escape }}</itunes:author>
	<itunes:subtitle>
	  {% if ep.like == '' %}{{ ep.thing | xml_escape }}{% else %}{{ ep.thing | xml_escape }} c'est comme {{ ep.like | xml_escape }}{% endif %}
	</itunes:subtitle>
	<itunes:summary>
	  {% if ep.like == '' %}{{ ep.thing | xml_escape }}{% else %}{{ ep.thing | xml_escape }} c'est comme {{ ep.like | xml_escape }}{% endif %}
	</itunes:summary>
	<itunes:image href="http://zenm4.net/img/{{ ep.img }}.png" />
	<enclosure url="{{ ep.mp3 }}" length="{{ ep.s }}00" type="audio/mp4" />
	<itunes:duration>{{ ep.d }}</itunes:duration>

        <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
        <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
        <guid isPermaLink="true">{{ post.url | prepend: site.baseurl | prepend: site.url }}</guid>
        {% for tag in post.tags %}<category>{{ tag | xml_escape }}</category>{% endfor %}
        {% for cat in post.categories %}<category>{{ cat | xml_escape }}</category>{% endfor %}
      </item>
    {% endfor %}
  </channel>
</rss>
